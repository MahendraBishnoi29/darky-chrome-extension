{
  "name": "Darky",
  "description": "Enjoy Every Website In Dark Mode",
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["popup.js"],
    "persisten": true
  },
  "browser_action": {
    "default_title": "Darky",
    "default_popup": "popup.html"
  },
  "permissions": ["https://*/*", "http://*/*", "tabs"]
}
